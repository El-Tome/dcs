{% extends 'base.html.twig' %}

{% block body %}

    <h1>Ã‰volution des montants par mois</h1>

    {% for grandClient, data in groupedGrandClients %}
         <div style="width: 100%; max-width: 1000px; height: 100%; max-height: 600px; margin: auto;">
            <h1>{{ grandClient }}</h1>
            <div id="chart-data-{{ loop.index }}"
                 data-type='line'
                 data-labels='{{ data|map(d => d.mois)|json_encode|raw }}'
                 data-values='{{ data|map(d => d.total_montant)|json_encode|raw }}'>
            </div>
            <canvas id="chart-{{ loop.index }}" style="width: 100%; max-width: 1000px; height: 80%; max-height: 500px; margin: auto;"></canvas>
        </div>
    {% endfor %}
{% endblock %}